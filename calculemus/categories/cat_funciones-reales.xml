  &lt;span class="o"&gt;:&lt;/span&gt; &lt;span class="n"&gt;acotadaSup&lt;/span&gt; &lt;span class="n"&gt;f&lt;/span&gt; &lt;span class="o"&gt;:=&lt;/span&gt;
